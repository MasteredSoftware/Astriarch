# Backend Configuration
# HTTP URL for API calls to the backend server
PUBLIC_BACKEND_HTTP_URL=http://localhost:8001

# WebSocket URL for real-time communication with the backend server  
PUBLIC_BACKEND_WS_URL=ws://localhost:8001

# Environment (development, production)
PUBLIC_NODE_ENV=development

# Enable client model checksum validation (useful for debugging desyncs, but has false positives)
# Set to 'true' to enable, leave unset or set to 'false' to disable (default: disabled)
PUBLIC_ENABLE_CHECKSUM_VALIDATION=false

# Enable logging of chain desync events to the console
# Set to 'true' to enable, leave unset or set to 'false' to disable (default: disabled)
PUBLIC_LOG_EVENT_CHAIN_DESYNCS=false
