		var config = {};
		config.external_resource_connect = #{external_resource_connect};

		function openWin(url) {
			window.open (url,"aboutastriarch","scrollbars=1,width=800,height=600");
			return false;
		}

		$(document).ready(function() {
			window.name = "astriarch-home";

		});

		//global "events"
		var AstriarchExtern = {	};

		AstriarchExtern.OnGameStart = function(data) {
			//{'Players':#, 'PlanetsPerSystem':#, 'Systems':#}
			if(config.external_resource_connect) {
				ga('send', 'event', 'Astriarch', 'Game Started', 'Players', data.Players);
				ga('send', 'event', 'Astriarch', 'Game Started', 'Planets Per System', data.PlanetsPerSystem);
				ga('send', 'event', 'Astriarch', 'Game Started', 'Systems', data.Systems);
			}
		};

		AstriarchExtern.OnGameOver = function(data) {
			//{'PlayerWon':true|false, 'Turns':#, 'Score':#}
			if(config.external_resource_connect) {
				if (data.PlayerWon) {
					ga('send', 'event', 'Astriarch', 'Game Over', 'Player Won', data.Score);
				}
				else {
					ga('send', 'event', 'Astriarch', 'Game Over', 'Player Lost', data.Score);
				}
				ga('send', 'event', 'Astriarch', 'Game Over', 'Turns Played', data.Turns);
			}
		};

		if(config.external_resource_connect) {
			(function (d, s, id) {
				var js, fjs = d.getElementsByTagName(s)[0];
				if (d.getElementById(id)) return;
				js = d.createElement(s);
				js.id = id;
				js.src = "https://connect.facebook.net/en_US/all.js#xfbml=1";
				fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		}

